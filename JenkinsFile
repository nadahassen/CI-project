pipeline {
    agent any

    stages {
        stage('Git') {
            steps {
                echo 'Getting project from Git'
                  git "https://github.com/nadahassen/CI-project.git"
            }
        }
         stage('Mvn clean') {
            steps {
                sh 'mvn clean'
            }
        }
         stage('Mvn compile') {
            steps {
                sh 'mvn compile'
            }
        }
         stage('Mvn sonar') {
            steps {
                sh 'mvn sonar:sonar -Dsonar.login-admin -Dsonar.password-sonar'
            }
        }
         stage('Mvn Junit') {
            steps {
                echo 'MVN test'
               
            }
        }
        stage('Deploy'){
			steps{
				sh "mvn deploy"
			}				
		}
		stage("Deploy With Nexus") {
            steps {
                sh "mvn clean package deploy:deploy-file -DgroupId=tn.spring -DartifactId=achat -Dversion=1.0 -DgeneratePom=true -Dpackaging=jar -DrepositoryId=deploymentRepo -Durl=http://localhost:8081/repository/maven-releases/ -Dfile=target/achat-1.0.war"
            }
       }
       
    }    
   
}